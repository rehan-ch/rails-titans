<div class='d-flex align-items-center py-4 bg-body-tertiary'>
  <main class="form-signin w-50 m-auto">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <h1 class="h3 mb-3 fw-normal">Please Sign up</h1>
      <div class="form-floating">
        <%= f.text_field :first_name, autofocus: true, required: true, autocomplete: "first_name", placeholder: "First Name", class: 'form-control' %>
        <%= f.label :first_name, class: 'floatingInput' %>
      </div>
      <div class="form-floating">
        <%= f.text_field :last_name, autofocus: true, required: true, autocomplete: "last_name", placeholder: "Last Name", class: 'form-control' %>
        <%= f.label :last_name, class: 'floatingInput' %>
      </div>
      <div class="form-floating">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "name@example.com", class: 'form-control' %>
        <%= f.label :email, class: 'floatingInput' %>
      </div>
      <div class="form-floating">
        <%= f.password_field :password, autofocus: true, placeholder: "Password", class: 'form-control' %>
        <%= f.label :password, class: 'floatingInput' %>
      </div>

      <div class="form-floating">
      <%= f.password_field :paspassword_confirmationsword, autofocus: true, placeholder: "Password", class: 'form-control' %>
        <%= f.label :password_confirmation, class: 'floatingInput' %>
      </div>
      <%= f.submit "Sign Up", class: 'btn btn-primary w-100 py-2 mt-3' %>
    <% end %>
      <%= render "devise/shared/links" %>
      <p class="mt-5 mb-3 text-body-secondary">© 2023–2024</p>
  </main>
</div>
