<div class='d-flex align-items-center py-4 bg-body-tertiary'>
  <main class="form-signin w-50 m-auto">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <h1 class="h3 mb-3 fw-normal">Please sign in</h1>
      <div class="form-floating">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "name@example.com", class: 'form-control' %>
        <%= f.label :email, class: 'floatingInput' %>
      </div>
      <div class="form-floating">
        <%= f.password_field :password, autofocus: true, placeholder: "Password", class: 'form-control' %>
        <%= f.label :password, class: 'floatingInput' %>
      </div>


      <% if devise_mapping.rememberable? %>
        <div class="form-check text-start my-3">
          <%= f.check_box :remember_me, class: 'form-check-input' %>
          <%= f.label :remember_me, class: 'form-check-label' %>
        </div>
      <% end %>
      <%= f.submit "Log in", class: 'btn btn-primary w-100 py-2 mt-3' %>
    <% end %>
    <%= render "devise/shared/links" %>
      <p class="mt-5 mb-3 text-body-secondary">© 2023–2024</p>
  </main>
</div>


