<div class='container'>
    <div class='text-center mt-3'>
        <h2><%= @article.title %></h2>
        <p>
            Author: <%= @article.user.full_name %>
        </p>
        <p>
            Published: <%= @article.created_at %>
        </p>
    </div>
    <hr/>
    <p>
        <%= @article.content %>
    </p>
    <hr/>
    <h3>Comments</h3>
        <%= render 'new_comment' if current_user %>
        <div id='article_comments'>
            <%= render 'comments' %>
        </div>
    <div>
    </div>
</div>