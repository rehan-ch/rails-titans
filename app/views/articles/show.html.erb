<div class='container'>
    <div class='text-center mt-3'>
        <h2><%= @article.title %></h2>
        <p>
            Author: <%= @article.user.full_name %>
        </p>
        <p>
            Published: <%= @article.created_at %>
        </p>
    </div>
    <hr/>
    <p>
        <%= @article.content %>
    </p>
    <hr/>
    <h3>Comments</h3>
        <%= form_with model: @new_comment do |f|%>
        <div class="form-group row mb-2">
            <%= f.label :content, class: 'col-sm-2 col-form-label' %>
            <div class="col-sm-10">
                <%= f.text_field :content, class: 'form-control', placeholder: 'Enter Content' %>
            </div>
        </div>
            <div class="form-group mb-2 text-center">
                <%= f.submit 'Submit', class: 'w-20' %>
            </div>
        <%end%>

    <div>
    </div>
</div>