<%= render "layouts/dashboard_content_header", title: 'Articles' %>

<%= form_with model: [:me, @article], local: true do |f|%>
  <div class="form-group row mb-2">
    <%= f.label :title, class: 'col-sm-2 col-form-label' %>
    <div class="col-sm-10">
        <%= f.text_field :title, class: 'form-control', placeholder: 'Enter Title' %>
    </div>
  </div>
  <div class="form-group row mb-2">
    <%= f.label :content, class: 'col-sm-2 col-form-label' %>
    <div class="col-sm-10">
        <%= f.text_area :content, class: 'form-control', size: "colsxrols", placeholder: 'Enter Content' %>
    </div>
  </div>
    <div class="form-group mb-2 text-center">
        <%= f.submit 'Submit', class: 'w-20' %>
    </div>
<%end%>