<div class='container'>
    <h1 class='text-center'>Users</h1>
    <div>
        <% @users.each_with_index do |user, index| %>
            <div class='border d-flex justify-content-between px-3'>
                
                <h3>
                    <%= index + 1 %>) <%= user.full_name.titleize  %>
                </h3>
                <div>
                    <%= link_to "show", user_path(user), class: 'btn btn-primary btn-sm' %>
                    <% if current_user.following?(user) %>
                        <%= link_to "un follow", un_follow_user_path(user), remote: true, class: 'btn btn-secondary btn-sm' %>
                    <% else %>
                        <%= link_to "follow", follow_user_path(user), remote: true, class: 'btn btn-secondary btn-small btn-sm' %>
                    <% end %>
                </div>
            </div>
        <% end %>
    </div>
</div>